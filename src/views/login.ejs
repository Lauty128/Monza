<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <title>Login</title>
</head>
<body>
    
    <section class="Login">
        <div class="Login__imageContainer">
            <img src="/assets/logo.webp" alt="logo monza automotores" class="Login__image">
        </div>
        <form action="/login" method="post" class="Login__form">
            <h1 class="Login__h1">Iniciar sesion</h1>
            <div class="Login__inputContainer">
                <label for="user-input" class="Login__label">Usuario</label>
                <input type="text" name="user" id="user-input" class="Login__input">
            </div>
            <div class="Login__inputContainer">
                <label for="password-input" class="Login__label">Contrase√±a</label>
                <input type="password" name="password" id="password-input" class="Login__input">
            </div>
            <input type="submit" class="Login__submitButton" value="INICIAR SESION">
        </form>
    </section>


    <%if(message){%>
        <div class="Message">
            <svg width="38px" height="38px" stroke-width="1.7" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" color="#000000"><path d="M11.576 1.424a.6.6 0 01.848 0l10.152 10.152a.6.6 0 010 .848L12.424 22.576a.6.6 0 01-.848 0L1.424 12.424a.6.6 0 010-.848L11.576 1.424zM12 8v4M12 16.01l.01-.011" stroke="#000000" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"></path></svg>
            <p class="Message__p"><%= message.message %></p>
            <%if(message.status){ %> 
                <p style="display:none;" class="Message__status"></p>
            <%}%>
        </div>

        <script>    
            const Message = document.querySelector('.Message')
            Message.classList.add((document.querySelector('.Message__status')) ? 'Message--ok' : 'Message--error')
            Message.classList.add('Message--active')

            setTimeout(()=>{
                Message.classList.remove('Message--active')
            }, 1500)
        </script>
    <% }%>

    <script src="/js/login.js"></script>

</body>
</html>